#!/bin/sh

PIDFILE=/var/run/sway.pid

start() {
	printf "Starting sway: "
	start-stop-daemon -S -q -b -m -p $PIDFILE -N -20 -x chrt -- -r 99 sway.sh
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
stop() {
	printf "Stopping sway: "
	start-stop-daemon -K -q -p $PIDFILE
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

