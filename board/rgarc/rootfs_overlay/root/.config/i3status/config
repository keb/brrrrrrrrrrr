wireless wlan0 {
	format_up = "W %ip (%essid)"
	format_down = "W down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "CHG"
        status_bat = "BAT"
        status_unk = "?"
        status_full = "FULL"
	integer_battery_capacity = true
	path = "/sys/class/power_supply/rk817-battery/uevent"
        low_threshold = 10
}


memory {
        format = "MEM %used"
        threshold_degraded = "10%"
}

cpu_usage {
	format = "CPU %usage"
}

time {
        format = "%H:%M"
}

